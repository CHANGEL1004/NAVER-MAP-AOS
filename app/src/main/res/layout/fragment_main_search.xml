<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data
        >
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="org.sopt.navermap.presentation.main.MainActivityViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_main_search_result_grid"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_search_mid_bar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/gray_3"
            android:alpha="0.3"
            app:layout_constraintTop_toBottomOf="@id/fcv_main_search_result_grid"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcv_main_search_result_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_search_mid_bar"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>