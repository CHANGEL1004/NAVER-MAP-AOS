<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="org.sopt.navermap.presentation.main.MainActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cl_main_search_result_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:background="@drawable/ic_main_search_list_rectangle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_main_search_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_location_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_main_search_list_title_entered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="알고"
            android:textAppearance="@style/Typography.NaverMap.Body1"
            android:textColor="@color/blue"
            app:layout_constraintStart_toEndOf="@id/iv_main_search_location"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_main_search_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="리즘"
            android:textAppearance="@style/Typography.NaverMap.Body1"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_main_search_list_title_entered"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_main_search_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="서울시 강남구"
            android:textAppearance="@style/Typography.NaverMap.Body7"
            android:textColor="@color/gray_5"
            app:layout_constraintStart_toEndOf="@id/iv_main_search_location"
            app:layout_constraintTop_toBottomOf="@id/tv_main_search_list_title" />

        <TextView
            android:id="@+id/tv_main_search_review_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="리뷰"
            android:textAppearance="@style/Typography.NaverMap.Body10"
            android:textColor="@color/gray_5"
            app:layout_constraintStart_toEndOf="@id/iv_main_search_location"
            app:layout_constraintTop_toBottomOf="@id/tv_main_search_address" />

        <TextView
            android:id="@+id/tv_main_search_review_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="5dp"
            android:text="12"
            android:textAppearance="@style/Typography.NaverMap.Body10"
            android:textColor="@color/gray_5"
            app:layout_constraintStart_toEndOf="@id/tv_main_search_review_string"
            app:layout_constraintTop_toBottomOf="@id/tv_main_search_address" />

        <TextView
            android:id="@+id/tv_main_search_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="18dp"
            android:text="퓨전음식"
            android:textAppearance="@style/Typography.NaverMap.Body9"
            android:textColor="@color/gray_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_main_search_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:text="31km"
            android:textAppearance="@style/Typography.NaverMap.Body9"
            android:textColor="@color/gray_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_main_search_category" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>